<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/base_linear_back">

    <TextView
        style="@style/text_hint"
        android:text="@string/text_aqi"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/normal_margin">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:id="@+id/textAQI"
                style="@style/text_AQI_PM"
                android:text="40"
                />
            <TextView
               style="@style/textBaseTheme"
                android:text="@string/hint_aqi"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/textPM"
                style="@style/text_AQI_PM"
                android:text="40"
                />
            <TextView
                style="@style/textBaseTheme"
                android:layout_gravity="center_horizontal"
                android:text="@string/hint_pm"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>